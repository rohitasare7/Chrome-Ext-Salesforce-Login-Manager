{
  "manifest_version": 3,
  "name": "Salesforce Login Manager",
  "author": "Rohitkumar Asare",
  "version": "1.0.1",
  "description": "Login to Salesforce Org with a single click using this Chrome Extension, effortlessly granting users instant access.",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://*.visualforce.com/*",
        "https://*.salesforce.mil/*",
        "https://*.crmforce.mil/*",
        "https://*.my.site.com/*",
        "https://*.sandbox.my.salesforce-sites.com/*"
      ],
      "exclude_matches": [
        "https://login.salesforce.com/*"
      ],
      "js": [
        "js/content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "incognito": "split",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}